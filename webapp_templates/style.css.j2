body {
    background-color: #f8f9fa;
    font-family: 'Arial', sans-serif;
}

h1 {
    color: #007bff;
    margin-top: 50px;
}

.lead {
    font-size: 1.5rem;
    color: #333;
}

button {
    padding: 10px 20px;
    font-size: 1.2rem;
    border: none;
    background-color: #007bff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}
